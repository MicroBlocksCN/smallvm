module main
author unknown
version 1 0 
description ''

script 50 50 {
whenStarted
home
'[display:mbDisplayOff]'
'pen down'
repeat 36 {
  repeat 4 {
    move (('[tft:getHeight]') / 3)
    turnBy 90
  }
